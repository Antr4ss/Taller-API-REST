<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Objetos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container my-5">
  <h2 class="mb-4">ðŸ“‹ Lista de Objetos</h2>

  <!-- BotÃ³n para ir al formulario -->
  <div class="mb-3">
    <a href="/objetos/nuevo" class="btn btn-primary">âž• Nuevo Objeto</a>
  </div>

  <!-- Formulario de filtro -->
  <form action="/objetos/filter" method="GET" class="row g-3 mb-4">
    <div class="col-md-6">
      <label for="departamento" class="form-label">Filtrar por Departamento</label>
      <input type="text" id="departamento" name="departamento" class="form-control" placeholder="Ejemplo: Antioquia">
    </div>
    <div class="col-md-6 d-flex align-items-end">
      <button type="submit" class="btn btn-outline-primary">Filtrar</button>
    </div>
  </form>

  <!-- Tabla de objetos -->
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Fecha</th>
          <th>Departamento</th>
          <th>Municipio</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if (objetos.length > 0) { %>
          <% objetos.forEach((obj, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= obj.fecha %></td>
              <td><%= obj.departamento %></td>
              <td><%= obj.municipio %></td>
              <td>
                <form action="/objetos/eliminar/<%= obj.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-danger">ðŸ—‘ Eliminar</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center">No hay registros</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
